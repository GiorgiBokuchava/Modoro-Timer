<ui:FluentWindow
    x:Class="Modoro_Timer.Views.TimerPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:controls="clr-namespace:Modoro_Timer.Controls"
    
    Title="TimerPopup"
    ShowInTaskbar="False"
    Focusable="True"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    SizeToContent="Manual"
    Width="305" Height="330"
    MinWidth="305" MinHeight="330"
    ResizeMode="NoResize"
    WindowStartupLocation="Manual"
    Background="Transparent"
    PreviewMouseDown="Window_PreviewMouseDown">

    <Border
        x:Name="BackgroundHost"
        Background="{DynamicResource WpfUiBackgroundBrush}"
        CornerRadius="7"
        Padding="12"
        SnapsToDevicePixels="True">

        <Grid>
            <!-- The ring itself -->
            <controls:CircularProgressRing
          Fraction="{Binding ProgressFraction}"
          Width="180" Height="180"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"/>

            <!-- Time & dots on top -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    Text="{Binding RemainingTime}"
                    FontSize="28"
                    Foreground="White"
                    HorizontalAlignment="Center" Padding="0,10,0,10"/>
                <ItemsControl 
                    ItemsSource="{Binding SessionDots}"
                    Padding="0,0,0,0"
                    IsTabStop="False">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse 
                                Width="7"
                                Height="7"
                                Margin="4"
                                Fill="{Binding FillBrush}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Session name overlayed -->
            <TextBlock
                Text="{Binding SessionTypeDisplay}"
                FontSize="14"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="1" Padding="0,0,0,90"/>

            <!-- Controls at the bottom -->
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10">

                <!-- Play/Pause Button -->
                <ui:Button
                    Width="40" Height="40"
                    Command="{Binding TogglePauseResumeCommand}"
                    Icon="{Binding PauseResumeSymbol}"
                    Foreground="White"
                    Content=""
                    Margin="0,0,10,0"/>

                <!-- Skip Button -->
                <ui:Button
                    Width="40" Height="40"
                    Command="{Binding SkipCommand}"
                    Icon="{Binding SkipSymbol}"
                    Foreground="White"
                    Content="" 
                    Margin="0,0,10,0"/>

                <!-- Reset Button -->
                <ui:Button
                    Width="40" Height="40"
                    Command="{Binding ResetCommand}"
                    Icon="{Binding ResetSymbol}"
                    Foreground="White"
                    Content="" />

            </StackPanel>
        </Grid>
    </Border>
</ui:FluentWindow>
